# Allow POST requests to submit.php to pass through
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} POST
    RewriteCond %{REQUEST_URI} ^/liyas-mineral-water/join/submit\.php$ [NC]
    RewriteRule .* - [L]
</IfModule>

# Root .htaccess - Security and Redirects
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Exclude cart API files from all rewrite rules
    RewriteRule ^(add_to_cart|get_cart|update_cart_quantity|remove_from_cart|submit_review|get_product_details)\.php$ - [L]
    
    # Special redirect for /redeem.php to /redeem (301 permanent)
    RewriteCond %{THE_REQUEST} /redeem\.php[\s?] [NC]
    RewriteRule ^redeem\.php$ /redeem? [NC,L,R=301]
    
    # Handle /redeem and /redeem/ (with or without trailing slash) - internal rewrite
    RewriteCond %{REQUEST_URI} ^/redeem/?$ [NC]
    RewriteRule ^redeem/?$ redeem/index.php [L]
    
    # Redirect other old .php URLs to clean URLs (301 permanent redirect)
    # BUT preserve query strings - exclude admin directory and cart API from this rule
    RewriteCond %{THE_REQUEST} /([^.]+)\.php[\s?] [NC]
    RewriteCond %{REQUEST_URI} !^/redeem\.php$ [NC]
    RewriteCond %{REQUEST_URI} !^/admin/ [NC]
    RewriteRule ^ /%1 [NC,L,R=301,QSA]
    
    # Remove .php extension from URLs (internal rewrite for other files)
    # Preserve query strings - exclude admin directory from this rule
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteCond %{REQUEST_URI} !^/redeem [NC]
    RewriteCond %{REQUEST_URI} !^/admin/ [NC]
    RewriteRule ^(.*)$ $1.php [L,QSA]
    
    # Redirect root to public directory
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_URI} !^/join/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Prevent access to sensitive directories
<IfModule mod_rewrite.c>
    RewriteRule ^(config|scripts|sql|vendor)/ - [F,L]
</IfModule>

